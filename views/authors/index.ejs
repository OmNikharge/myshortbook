<head>
    <!-- <link rel="stylesheet" href="/css/authors/index"> -->
    <style>
        * {
            font-family: 'Rubik', sans-serif;
        }

        .form-section {
            display: flex;
            height: 300px;
            flex-direction: column;
            justify-content: center;
            text-align: center;
            /* border: 2px solid black; */
        }

        .heading {

            font-size: 50px;
            color: #1fb5d3;
        }

        .all-authors {
            margin: 20px 50px;
            font-size: 40px;
            color: #1fb5d3;
        }

        .search-author-index-form {

            display: flex;
            flex-direction: column;
            width: 300px;
            margin: 10px auto;
            position: relative;
            top: 30px;
            flex-wrap: wrap;
            z-index: 10;
        }

        .search-author-index-form button {
            background-color: #1fb5d3;
            margin: 15px auto;
            width: 100px;
            height: 35px;
            border: none;
            outline: none;
            border-radius: 9999px;
            font-size: 18px;
            color: white;
            cursor: pointer;
            /* font-weight: bold; */
        }
         
        .search-author-index-form label {
            font-size: 30px;
            color: #1fb5d3;
            margin-bottom: 5px;
        }

        .search-author-index-form input {
            height: 40px;
        }


        .author-functions {
            display: flex;
            /* border: 2px solid black; */
            flex-direction: column;
            /* align-items: center; */

            margin: 0px 50px;
            flex-wrap: wrap;
        }

        .author-functions-each {
            border: 2px solid #1fb5d3;
            padding: 10px;
            margin: 10px;
        }

        .author-functions div {
            color: #18343a;
            font-size: 30px;
        }

        .author-name{
            padding: 0px 10px;
        }
     
        .author-btns{
            display: flex;
        }
        .author-functions a {
            text-decoration: none;
            /* margin-left: 10px;
            margin-right: 5px; */
            margin: 15px 15px;
            font-size: 18px;
            color: rgb(255, 255, 255);
            background-color: #145461;
            width: 50px;
            /* height: 30px; */
            border-radius: 9999px;
            text-align: center;
            line-height: 30px;
            padding: 0px 10px;
        }

        .delete-btn {
            background-color: #145461;
            /* margin-left: 20px;
            margin-right: 70px; */
            margin: 15px 15px;
            width: 80px;
            height: 30px;
            border: none;
            outline: none;
            border-radius: 9999px;
            font-size: 18px;
            color: white;
        }

        
    </style>
</head>
<section class="form-section">

    <div class="heading">Search Authors</div>
    <form class="search-author-index-form" action="/authors" method="get">
        <label>Name</label>
        <input type="text" name="lame" value="<%= typedText.lame %>">
        <button class="search" type="submit">Search</button>
    </form>


</section>
<div class="all-authors">All Authors</div>
<section class="author-functions">
    <% authors.forEach(author=>{ %>
        <div class="author-functions-each">
            <div class="author-name">
                Name: <%= author.name %>
            </div>
            <div class="author-btns">
                <a class="view-author-btn" href="/authors/<%= author.id %>">View</a>
                <a href="/authors/<%= author.id %>/edit ">Edit</a>
                <%- include('../partials/deleteform',{url: `/authors/${author.id}`}) %>
            </div>

        </div>
        <% }) %>
</section>